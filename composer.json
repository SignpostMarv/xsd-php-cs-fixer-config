{
    "name" : "goetas-webservices/xsd-php-cs-fixer-config",
    "description" : "PHP CS Fixer configuration for XSD projects",
    "license" : "MIT",
    "authors" : [
        {
            "name" : "Asmir Mustafic",
            "email" : "goetas@lignano.it"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require" : {
        "php": "^7.0",
        "friendsofphp/php-cs-fixer": "^2.10"
    },
    "require-dev" : {
        "phpstan/phpstan": "^0.9.1",
        "sebastian/phpcpd": "^3.0"
    },
    "autoload" : {
        "psr-4" : {
            "GoetasWebservices\\CS\\": "./php-cs-fixer/"
        }
    },
    "scripts": {
        "tests": [
            "php ./vendor/phpstan/phpstan/bin/phpstan analyse -c ./phpstan.neon src",
            "psalm",
            "php ./vendor/sebastian/phpcpd/phpcpd ./src/",
            "php ./vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --verbose --dry-run"
        ]
    }
}
